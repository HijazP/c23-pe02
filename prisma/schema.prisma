generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Desa {
  id  Int @id @default(autoincrement())
  email String @unique
  password String
  namaDesa String
  telepon String
  lokasiDesa String?
  latitude Float?
  longitude Float?
  foto String?
  masalah Masalah[]
}

model Masalah {
  id  Int @id @default(autoincrement())
  namaMasalah String
  deskripsi String
  idDesa Int
  Desa Desa @relation(fields: [idDesa], references: [id])
  ambilMasalah AmbilMasalah[]
}

model Modul {
  id  Int @id @default(autoincrement())
  namaModul String
  idKursus Int
  Kursus Kursus @relation(fields: [idKursus], references: [id])
}

model Kursus {
  id  Int @id @default(autoincrement())
  namaKursus String
  deskripsi String @db.LongText
  dampak String @db.LongText
  foto String
  modul Modul[]
  ambilKursus AmbilKursus[]
}

model Pengguna {
  id  Int @id @default(autoincrement())
  namaLengkap String
  email String @unique
  password String
  foto String
  ambilMasalah AmbilMasalah[]
  ambilKursus AmbilKursus[]
}

model AmbilMasalah {
  id  Int @id @default(autoincrement())
  idMasalah Int
  idPengguna Int
  statusSelesai Boolean
  Masalah Masalah @relation(fields: [idMasalah], references: [id])
  Pengguna Pengguna @relation(fields: [idPengguna], references: [id])
}

model AmbilKursus {
  id  Int @id @default(autoincrement())
  idKursus Int
  idPengguna Int
  jumlahModul Int
  modulSekarang Int
  statusSelesai Boolean
  Kursus Kursus @relation(fields: [idKursus], references: [id])
  Pengguna Pengguna @relation(fields: [idPengguna], references: [id])
}
