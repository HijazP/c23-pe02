generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Desa {
  id  Int @id @default(autoincrement())
  email String @unique
  password String
  namaDesa String
  telepon String
  lokasiDesa String
  latitude Float
  longitude Float
  masalah Masalah[]
}

model Masalah {
  id  Int @id @default(autoincrement())
  namaMasalah String
  deskripsi String
  idDesa Int
  Desa Desa @relation(fields: [idDesa], references: [id])
  modulProblem ModulMasalah[]
  ambilMasalah AmbilMasalah[]
}

model Modul {
  id  Int @id @default(autoincrement())
  namaModul String
  idKursus Int
  Kursus Kursus @relation(fields: [idKursus], references: [id])
  modulMasalah ModulMasalah[]
}

model ModulMasalah {
  id Int @id @default(autoincrement())
  idModul Int
  idMasalah Int
  Modul Modul @relation(fields: [idModul], references: [id])
  Masalah Masalah @relation(fields: [idMasalah], references: [id])
}

model Kursus {
  id  Int @id @default(autoincrement())
  namaKursus String
  modul Modul[]
}

model Pengguna {
  id  Int @id @default(autoincrement())
  namaLengkap String
  email String @unique
  password String
  ambilMasalah AmbilMasalah[]
}

model AmbilMasalah {
  id  Int @id @default(autoincrement())
  idMasalah Int
  idPengguna Int
  Masalah Masalah @relation(fields: [idMasalah], references: [id])
  Pengguna Pengguna @relation(fields: [idPengguna], references: [id])
}
